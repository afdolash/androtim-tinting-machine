<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.advinity.afdolash.androtim.activity.DevicesActivity">

    <at.markushi.ui.CircleButton
        android:id="@+id/btn_btConnect"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_bluetooth_white_24dp"
        app:cb_color="#3F51B5"
        app:cb_pressedRingWidth="8dip"
        android:soundEffectsEnabled="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="Jika tidak ada perangkat yang terlihat, hubungkan perangkat pada pengaturan android Bluetooth. "
        android:textAlignment="center"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
